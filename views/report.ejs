<!DOCTYPE html>
<html lang="en">
<head>
  <% include partials/head %>
</head>
<body>
  <header>
    <% include partials/navbar %>
  </header>
  <main>
    <div class="container-fluid">
      <div class="row flex-xl-nowrap">
        <% if(user.role != 0) {%>
        <div class="col-12 col-md-3 col-xl-2 bd-sidebar">
          <% include partials/sidenav %>
        </div>
        <% } %>
        <div class="<%=(user.role != 0) ? 'col-12 col-md-9 col-xl-10 py-md-3 pl-md-5' : 'col-md-8'%>">
          <%if(message.length > 0){%>
          <div class="position-relative row">
            <div class="position-absolute col-12">
              <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <%=message%>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
            </div>
          </div>
          <%}%>
          <% if(user){%>
            <div class="row mt-5">
              <div class="col-sm-12 col-lg-10 mx-auto">
                <div class="card shadow">
                  <div class="card-header text-center">
                    <h5 class="mb-0">Keluhan</h5>
                  </div>

                  <div class="card-body">
                    <form method="post">
                      <input type="hidden" name="status" value="<%=reports.status%>"/>
                      <span class="badge badge-<%=(reports.status) ? 'warning':'success'%> float-right"><%=(reports.status) ? 'Open':'Close'%></span>
                      <p class="font-weight-light">Kategori: <span class="font-weight-bold"><%=reports.categoryName%></span></p>
                      <p>Unit: <b><%=reports.unitName%></b></p>
                      <p>Tanggal: <b><%=reports.tanggal%></b></p>
                      <p>Komplain: <b><%=reports.masalah%></b></p>
                      <%if (user["role"] == 1){%>
                        <button class="btn btn-primary btn-block">Ubah status</button>
                      <%}%>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <%}%>
        </div>
      </div>
    </div>
  </main>
  <footer>
    
  </footer>
  <% include partials/script %>
</body>
</html>